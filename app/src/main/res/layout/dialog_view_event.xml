<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp">

    <LinearLayout
        android:id="@+id/layout_manage_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Name"
            android:id="@+id/textView_manage_event_name_tag"
            android:singleLine="false"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            android:textColor="#4052b5"
            android:paddingRight="4dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Name"
            android:id="@+id/textView_manage_event_name"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:maxLines="5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:layout_marginLeft="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/textView_manage_event_description_tag"
            android:singleLine="false"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            android:textColor="#4052b5"
            android:paddingRight="4dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description of the specific event because why not"
            android:id="@+id/textView_manage_event_description"
            android:textAlignment="center"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_startDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Date"
            android:id="@+id/textView_manage_event_startDate_tag"
            android:singleLine="false"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            android:textColor="#4052b5"
            android:paddingRight="4dp"
            android:layout_gravity="center_horizontal"
            android:labelFor="@+id/textView_manage_event_startDate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/textView_manage_event_startDate"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_view_event_buttons"
        android:paddingBottom="4dp"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/button_manage_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Event"
            android:background="@color/colorAccent"
            android:textColor="#4052b5"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/button_delete_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Event"
            android:background="#4052b5"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp" />
    </LinearLayout>
</LinearLayout>