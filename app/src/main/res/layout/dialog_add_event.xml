<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_manage_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Name"
            android:id="@+id/textView_manage_event_name_tag"
            android:singleLine="false"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            android:textColor="#4052b5"
            android:paddingRight="4dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_create_name"
            android:hint="New Event Name"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textIsSelectable="false"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/textView_manage_event_description_tag"
            android:singleLine="false"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            android:textColor="#4052b5"
            android:paddingRight="4dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textIsSelectable="false"
            android:ems="10"
            android:id="@+id/editText_create_description"
            android:layout_gravity="center_horizontal"
            android:hint="Description of the event"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_event_startDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Date"
            android:id="@+id/textView_event_startDate"
            android:singleLine="false"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            android:textColor="#4052b5"
            android:paddingRight="4dp"
            android:layout_gravity="center_horizontal"
            android:labelFor="@+id/editText_date_start"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_date_start"
            android:hint="ex: Today, 11/11/1111, etc..."
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textIsSelectable="false"
            android:inputType="text"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_view_event_buttons"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/button_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:background="#4052b5"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>