<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_friend_info">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/imageView_view_friend_profile"
        android:src="@drawable/default_profile"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name Of Friend"
        android:id="@+id/textView_view_friend_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Friend Email"
        android:id="@+id/textView_view_friend_email"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:textSize="18sp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_friend_buttons">

        <Button
            android:id="@+id/button_remove_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Friend"
            android:background="#4052b5"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp" />
    </LinearLayout>
</LinearLayout>
