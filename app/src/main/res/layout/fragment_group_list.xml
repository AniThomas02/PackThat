<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.FriendsFragment"
    android:orientation="vertical"
    android:id="@+id/layout_group_list">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView_group_list"
        android:layout_weight=".90" >

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableListView_group_list"
            android:layout_gravity="right" />
    </ScrollView>

    <Button
        android:id="@+id/button_add_group_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add List"
        android:background="#4052b5"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:layout_weight=".025"
        android:layout_marginBottom="4dp" />
</LinearLayout>
