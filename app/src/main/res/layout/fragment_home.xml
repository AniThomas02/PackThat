<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/layout_personal_and_group_events">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome User!"
        android:id="@+id/textView_welcome"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="28sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/layout_personal_events"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_personal_header"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="My Personal Events"
                android:id="@+id/textView_personal"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="6sp"
                android:paddingTop="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="18sp"
                android:background="@color/colorAccent"
                android:layout_weight="1" />

            <Button
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:text="Add New"
                android:id="@+id/button_add_personal"
                android:background="#4052b5"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView_personal" >

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView_personal" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/layout_group_events"
        android:weightSum="1"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="My Group Events"
                android:id="@+id/textView_groups"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="6sp"
                android:paddingTop="12sp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="18sp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:text="Add New"
                android:id="@+id/button_add_group"
                android:background="#4052b5"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView_groups"
            android:layout_weight="0.58" >

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView_group" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>